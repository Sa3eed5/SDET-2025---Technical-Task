{
  "name": "sdet-2025-task",
  "version": "1.0.0",
  "description": "Full QA Project for UI and API testing",
  "scripts": {
    "test:api": "jest API-tests/Tests/auth.test.js",
    "test:ui": "nightwatch",
    "test": "npm run test:api && npm run test:ui"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Mock User Auth API Test Report",
          "outputPath": "API-tests/mock-user-auth/components/mock/routes/report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true
        }
      ]
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.6.0",
    "nightwatch": "^3.3.0",
    "nightwatch-html-reporter": "^2.0.6"
  }
}
