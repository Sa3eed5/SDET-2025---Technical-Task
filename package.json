{
  "name": "api-tests",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon ./node_modules/mock-user-auth/bin/www.js",
    "test": "jest",
    "test:ui": "nightwatch --env chrome",
    "test:api": "jest \"API Test/Tests/auth.test.js\"",
    "test:all": "npm run test:ui && npm run test:api"
  },
  "jest": {
    "reporters": [
      "default",
      ["jest-html-reporter", {
        "pageTitle": "Mock User Auth API Test Report",
        "outputPath": "mock-user-auth/report.html"
      }]
    ]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.6.0",
    "nightwatch": "^3.3.0",
    "nightwatch-html-reporter": "^2.0.6"
  },
  "dependencies": {
    "supertest": "^6.3.3"
  }
}
