{
  "name": "qa-testing-project",
  "version": "1.0.0",
  "scripts": {
    "start": "node API-tests/mock-user-auth/index.js",
    "test:api": "jest 'API-tests/mock-user-auth/tests/auth.test.js'",
    "test:ui": "nightwatch",
    "test": "npm run test:api && npm run test:ui"
  },
  "dependencies": {
    "supertest": "^6.3.3",
    "express": "^4.18.2"

  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-html-reporter": "^3.6.0",
    "nightwatch": "^3.12.2",
    "nightwatch-html-reporter": "^2.0.6",
    "chromedriver": "^138.0.1",
    "wait-on": "^7.0.1"

  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Mock User Auth API Test Report",
          "outputPath": "API-test/report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true
        }
      ]
    ],
    "testEnvironment": "node"
  }
}
